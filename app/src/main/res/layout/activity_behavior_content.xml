<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.robapp.app.activity.BehaviorActivity"
    tools:showIn="@layout/app_bar"
    android:columnCount="6">

    <TextView
        android:id="@+id/nameBehavior"
        android:text="Behavior"
        android:textSize="16dip"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="center_horizontal|top"
        />

    <Space
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="fill"
        />

    <ImageView
        android:id="@+id/emotionRob"
        android:src="@drawable/ic_logo"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_rowSpan="4"
        android:paddingBottom="15dp"
        android:layout_gravity="fill|center_vertical|center_horizontal"

        />


    <Space
        android:layout_row="8"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="fill"
        />

    <Button
        android:id="@+id/startButton"
        android:text="Demmarer"
        android:layout_row="9"
        android:layout_column="0"
        android:layout_columnSpan="6"
        android:layout_gravity="center|bottom"

        />

</GridLayout>
